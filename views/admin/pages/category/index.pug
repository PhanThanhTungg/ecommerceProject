extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main
  h1(class="mb-4") #{pageTitle}

  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
        .col-4.text-right
          a(
            href=`${prefixAdmin}/categorys/create`
            class="btn btn-outline-success"
          ) + Thêm mới
          
      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động

        tbody
          if(categorys)
            +table-tree(categorys)
  
  form(
    method = "POST"
    action=`${prefixAdmin}/categorys/delete/` 
    class="formDeleteItem d-none"
  )