extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/formSearch.pug
include ../../mixins/pagination.pug

block main
  h1(class="mb-4") Quản lý sản phẩm

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filterStatus(filterStatus)
        .col-6 
          +formSearch(keySearch)

  .card.mb-3
    .card-header Danh sách
    .card-body
      table.table.table-hover.table-sm
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động
        tbody
          each item, index in products
            tr 
              td #{index+objectPagination.skip+1}
              td
                img(
                  src="121"
                  alt=item.title
                  width="80px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td
                if(item.status == "active")
                  a(
                    href="javascript:;" 
                    class="badge badge-success"
                    status = "active"
                    id = item.id
                  ) Hoạt động
                else
                  a(
                    href="javascript:;" 
                    class="badge badge-danger"
                    status = "inactive"
                    id = item.id
                  ) Dừng hoạt động
                form(
                  method = "POST"
                  action=`${prefixAdmin}/products/changeStatus` 
                  class="form-change-status d-none"
                )
              td
                button(class="btn btn-warning btn-sm") Sửa
                button(class="btn btn-danger btn-sm ml-1") Xóa
  nav 
    +pagination(objectPagination)
   
    

          