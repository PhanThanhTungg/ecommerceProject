extends ../../layouts/default.pug

block main
  h1(class="mb-4  page-title") #{pageTitle}

  form(
    action=`${prefixAdmin}/adminInfo/edit?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        required
        value=currentAdmin.fullName
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        value=currentAdmin.email
      )
    div(class="form-group")
      button(type="button" class="button-change-password") Đổi mật khẩu
      .change-password-group.mt-2.d-none
        label(for="password") Mật khẩu:
        input(
          type="password"
          class="form-control"
          id="password"
          name="password"
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=currentAdmin.phone
      )
    div(
      class="form-group"
      upload-image
    )
      label(for="avatar") Avatar
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=currentAdmin.avatar
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary button-1"
      ) Cập nhật
  script(src="/admin/js/secondaryScript.js")