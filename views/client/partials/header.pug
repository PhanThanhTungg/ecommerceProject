include ../mixins/sub-menu.pug

header.header 
  .container
    .row.align-items-center
      .col-3
        .inner-logo 
          a(href="/")
            img(src="https://cc-prod.scene7.com/is/image/CCProdAuthor/mascot-logo-design_P1_900x420?$pjpeg$&jpegSize=200&wid=900", alt="logo")

      .col-5
        form(
          action="/search/products"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm

      .col-4 
        .inner-menu
          ul 
            li 
              a(href="/") Home 
            li(class="sub-menu")
              a(href="/products") Products
              +sub-menu(layoutProductCategory)
            li(class="cart-icon")
              a(href="/cart") Cart (#{miniCart?miniCart.totalQuantity:0})
              